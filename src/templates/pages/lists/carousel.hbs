title: Carousel
section: Lists
---

<div class="row">
	<div class="col-sm-12">
		{{> breadcrumb }}
	</div>
</div>
<div class="row">
	<div class="col-sm-12 col-md-3">
		{{> nav-sidebar }}
	</div>
	<div class="col-sm-12 col-md-9">
		<div id="carousel-large" class="carousel slide carousel-fullwidth" data-ride="carousel" data-interval="5000">
			<!-- Indicators -->
			<ol class="carousel-indicators">
				<li data-target="#carousel-large" data-slide-to="0" class="active"></li>
				<li data-target="#carousel-large" data-slide-to="1"></li>
				<li data-target="#carousel-large" data-slide-to="2"></li>
			</ol>
			<!-- Wrapper for slides -->
			<div class="carousel-inner">
				<div class="item active">
					<img src="/system/assets/images/wide/blueprint.jpg" alt="" data-aspect="3.3">
					<div class="overlay overlay-tl ribbon">
						<h2>Header Carousel</h2>
						<small>(overlay overlay-tl ribbon)</small></h4>
					</div>
				</div>
				<div class="item">
					<img src="/system/assets/images/wide/map.jpg" alt="" data-aspect="3.3">
					<div class="overlay overlay-tr glow">
						<h2>All controls showing</h2>
						<small>(overlay overlay-tr glow)</small></h4>
					</div>
				</div>
				<div class="item">
					<img src="/system/assets/images/wide/balloons.jpg" alt="" data-aspect="3.3">
					<div class="carousel-caption">
						<p><a href='http://getbootstrap.com/javascript/#carousel' class='btn btn-primary'>Find out more</a></p>
					</div>
				</div>
			</div>

			<!-- Controls -->
			<a class="left carousel-control" href="#carousel-large" data-slide="prev">
				<i class='fa fa-chevron-left carousel-icon-left'></i>
			</a>
			<a class="right carousel-control" href="#carousel-large" data-slide="next">
				<i class='fa fa-chevron-right carousel-icon-right'></i>
			</a>
		</div>

