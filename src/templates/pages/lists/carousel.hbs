	<div class="col-sm-12 col-md-3">
		{{> nav-sidebar }}
	</div>
	<div class="col-sm-12 col-md-9">
		<div id="carousel-large" class="carousel slide carousel-fullwidth">
			<!-- Indicators -->
			<ol class="carousel-indicators">
				<li data-target="#carousel-large" data-slide-to="0" class="active"></li>
				<li data-target="#carousel-large" data-slide-to="1"></li>
				<li data-target="#carousel-large" data-slide-to="2"></li>
			</ol>

			<!-- Wrapper for slides -->
			<div class="carousel-inner">
				<div class="item active">
					<img src="/system/assets/images/wide/blueprint.jpg" alt="">
					<h4 class="overlay overlay-tl ribbon">Header Carousel <small>(h4.overlay.overlay-tl.ribbon)</small></h4>
				</div>
				<div class="item">
					<img src="/system/assets/images/wide/map.jpg" alt="">
					<h4 class="overlay overlay-tr glow">All controls showing <small>(h4.overlay.overlay-br.glow)</small></h4>
				</div>
				<div class="item">
					<img src="/system/assets/images/wide/balloons.jpg" alt="">
					<div class="carousel-caption">
						<p><a href='http://getbootstrap.com/javascript/#carousel' class='btn btn-primary'>Find out more</a></p>
					</div>
				</div>
			</div>

			<!-- Controls -->
			<a class="left carousel-control" href="#carousel-large" data-slide="prev">
				<i class='fa fa-chevron-left carousel-icon-left'></i>
			</a>
			<a class="right carousel-control" href="#carousel-large" data-slide="next">
				<i class='fa fa-chevron-right carousel-icon-right'></i>
			</a>
		</div>

